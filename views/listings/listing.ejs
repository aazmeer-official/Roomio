<% layout('/layouts/boilerplate') -%>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let data of datas){ %>
        <a href="/listing/<%= data._id %>" class="listingLink">
        <div class="card col">
        <img src="<%= data.image %>" class="card-img-top" alt="..." style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text text-bold"><%= data.title %></p>
            <p class="card-text">Price Per Night :PKR <%= data.price.toLocaleString('en-IN') %></p>
        </div>
        </div>
        </a>
    <% } %>
</div>
